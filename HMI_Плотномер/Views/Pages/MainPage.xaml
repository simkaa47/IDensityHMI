<UserControl x:Class="IDensity.Core.Views.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:IDensity.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:trends="clr-namespace:IDensity.Core.Views.UserControls.Trends"
             xmlns:dt="clr-namespace:IDensity.Core.Views.UserControls.DateTimes"
             xmlns:wpftool="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:IDensity.Core.Views.Pages"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"   
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             d:DataContext="{d:DesignInstance Type=vm:VM}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <!--#region Trends-->
            <TabControl TabStripPlacement="Bottom">
                <!--#region Current Trend-->
                <TabItem Header="Текущий тренд">
                    <trends:MainTrendControl DataSource="{Binding PlotCollection}" Margin="10"                                                 
                                                     LineVisibility1="{Binding TrendsVisible.VisLine1, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineVisibility2="{Binding TrendsVisible.VisLine2, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle2="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=1}"
                                                     LineVisibility3="{Binding TrendsVisible.VisLine3, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle3="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=2}"
                                                     LineVisibility4="{Binding TrendsVisible.VisLine4, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle4="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=3}"
                                                     LineVisibility5="{Binding TrendsVisible.VisLine5, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle5="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=4}"
                                                     LineVisibility6="{Binding TrendsVisible.VisLine6, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle6="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=5}"
                                                     LineVisibility7="{Binding TrendsVisible.VisLine7, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle7="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=6}"
                                                     LineVisibility8="{Binding TrendsVisible.VisLine8, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle8="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=7}"
                                                     LineVisibility9="{Binding TrendsVisible.VisLine9, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle9="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=8}"
                                                     LineVisibility10="{Binding TrendsVisible.VisLine10, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     LineTitle10="{Binding Source={StaticResource CurveNames}, Converter={StaticResource GetByIndex}, ConverterParameter=9}"/>
                </TabItem>
                <!--#endregion-->
                <!--#region Archieve Trens-->
                <TabItem Header="Архивный тренд">                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--#region Data Source Panel-->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <!--#region Start Time Selection-->
                            <dt:DateTimeParameter Description="Стартовая точка тренда"
                                                  Margin="5,0,5,0"
                                                  PopupOpenedCommand="{Binding SelectDatesCommand}"                                                        
                                                  DateTime="{Binding DisplayDateStart, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                            <!--#endregion-->
                            <!--#region Finish Time Selection-->
                            <dt:DateTimeParameter   Grid.Column="1"
                                                    Margin="5,0,5,0"
                                                    Description="Конечная точка тренда"
                                                    PopupOpenedCommand="{Binding SelectDatesCommand}"                                                      
                                                    DateTime="{Binding DisplayDateEnd, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                            <!--#endregion-->
                            <!--#region File Browse-->
                            <Border Grid.Column="2" Margin="5,0,5,0" Background="#16FFFFFF" CornerRadius="4,4,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="LogPath" Text="{Binding LogPath, Mode=TwoWay}" 
                                               TextWrapping="Wrap" Foreground="#B1FFFFFF" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    <Image Margin="2" Grid.Column="1" Source="..\Resourses\Pictures\DriveFileMove.png" Opacity="0.5"
                                           MouseLeftButtonDown="BrowseLogPath"/>
                                </Grid>
                            </Border>
                            <!--#endregion-->
                            <!--#region Write Button -->                            
                            <Border Grid.Column="3" Margin="4,0,4,0" 
                                    IsEnabled="{Binding LogPath, Converter={StaticResource FileExistConverter}}"
                                    Opacity="{Binding RelativeSource={RelativeSource Self}, Path=IsEnabled, Converter={StaticResource GetIfTrue}, ConverterParameter={StaticResource Opacities}}"
                                    Background="#16FFFFFF" CornerRadius="4,4,0,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding WriteLogCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Запись" 
                                               TextWrapping="Wrap" Foreground="#B1FFFFFF" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                    <Image Margin="2" Grid.Column="1" Source="..\Resourses\Pictures\SystemUpdateAlt.png" Opacity="0.5"
                                           Visibility="{Binding ArchivalTrendUploading, Converter={StaticResource VisibleIfEqual}, ConverterParameter=False}"/>
                                    <fa:ImageAwesome 
                                                Margin="2" 
                                                Visibility="{Binding ArchivalTrendUploading, Converter={StaticResource VisibleConverter}}" 
                                                Icon="Refresh" HorizontalAlignment="Center"                                             
                                                Spin="{Binding ArchivalTrendUploading}"/>
                                </Grid>
                            </Border>
                            <!--#endregion-->
                            <!--#region ShowTrendButton -->
                            <Button Grid.Column="4"  Style="{StaticResource TypicalButton0}"/>
                            <!--#endregion-->
                        </Grid>
                        <!--#endregion-->
                    </Grid>
                </TabItem>
                <!--#endregion-->
            </TabControl>
            <!--#region Trend Settings-->
            <ToggleButton Grid.Column="1"
                          Style="{StaticResource NoStyle}"
                          Margin="20"
                          MaxHeight="30"
                          MaxWidth="30"
                          Background="Transparent"
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Top"
                          x:Name="ShowTrendSettinsButton">
                <ToggleButton.ToolTip>
                    <TextBlock Text="Настройки трендов"/>
                </ToggleButton.ToolTip>
                <Image Source="..\Resourses\Pictures\TuneIcon.png"/>                
            </ToggleButton>
            <Popup Height="480" Width="600"                   
                   IsOpen="{Binding ElementName=ShowTrendSettinsButton, Path=IsChecked}"                   
                   StaysOpen="False"                   
                   Placement="MousePoint">
                <trends:TrendSettingsControl/>
            </Popup>
            <!--#endregion-->
            <!--#endregion-->
        </Grid>
    </Grid>
</UserControl>
