<UserControl x:Class="IDensity.Core.Views.UserControls.MeasProcesses.MeasProcSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:IDensity.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:IDensity.Core.Views.UserControls.MeasProcesses"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:MeasProcessVm}">
    <Viewbox>
        <Viewbox.Resources>
            <Style TargetType="ListBoxItem">
                
            </Style>
        </Viewbox.Resources>
        <DockPanel>
            <TextBlock Text="ПРОЦЕССЫ:" Foreground="White" VerticalAlignment="Center" Margin="0,0,50,0"/>
            <ListBox ItemsSource="{Binding VM.mainModel.MeasProcSettings}"
                     HorizontalContentAlignment="Stretch"
                     SelectedIndex="0"
                     SelectedItem="{Binding SelectedProcess, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListBox.Resources>
                    <x:Array Type="sys:String" x:Key="CheckBoxItems">
                        <sys:String>..\..\Resourses\Pictures\RadioButtonUnChecked.png</sys:String>
                        <sys:String>..\..\Resourses\Pictures\RadioButtonChecked.png</sys:String>
                    </x:Array>
                </ListBox.Resources>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="10,0,10,0" >
                            <Image Source="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected, Converter={StaticResource GetIfTrue}, ConverterParameter={StaticResource CheckBoxItems}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="№ " VerticalAlignment="Center" Foreground="Gray" FontSize="8"/>
                                <TextBlock Text="{Binding Num, StringFormat=0{0}}" FontWeight="Normal"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"/>
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Viewbox>
</UserControl>
