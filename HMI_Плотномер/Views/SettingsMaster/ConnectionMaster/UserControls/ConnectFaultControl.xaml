<UserControl x:Class="IDensity.Views.SettingsMaster.ConnectionMaster.UserControls.ConnectFaultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDensity.Views.SettingsMaster.ConnectionMaster.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Style="{StaticResource MasterConnect}"
                       Text="К сожалению не удалось подключиться к прибору. Сбросьте устройство к заводским настройкам, и попробуйте подключиться по адресу по умолчанию"/>
    </Grid>
</UserControl>
